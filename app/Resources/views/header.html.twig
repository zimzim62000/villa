<div data-sticky-container class="fullfull-width">
    <div class="title-bar sticky" id="topbar" data-sticky data-options="marginTop:0;" style="width:100%; padding:0!important;" >
        <div class="top-bar-title">
            <a href="{{ path('app_home_index') }}">
            <span data-responsive-toggle="responsive-menu" data-hide-for="medium">
                {% image '@AppBundle/Resources/public/images/villadesiree.png' %}
                <img src="{{ asset_url }}" style="height:50px;" alt="villa désirée - votre location de villa en guadeloupe" />
                {% endimage %}
            </span>
            <strong>{{ 'app.index.title'|trans }}</strong>
            </a>
        </div>
        <div id="responsive-menu">
            <div class="top-bar-right">
                <ul class="menu">
                    <li><a type="button" href="{{ path('app_home_index') }}#house"
                           class="secondary-color">{{ 'app.index.topbar.lamaison'|trans }}</a></li>
                    <li><a type="button" href="{{ path('app_home_index') }}#guada"
                           class="secondary-color">{{ 'app.index.topbar.guada'|trans }}</a></li>
                    <li><a type="button" href="{{ path('app_home_cost') }}"
                           class="secondary-color">{{ 'app.index.topbar.tarifs'|trans }}</a></li>
                    <li><a type="button" href="{{ path('app_home_contact') }}"
                           class="secondary-color">{{ 'app.index.topbar.contact'|trans }}</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>